<h1>Users <strong>All</strong></h1>

<p><%= link_to "Add new user", new_admin_user_path %></p>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Last seen at</th>
    <th>&nbsp;</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user_picture user %></td>
      <td><%= link_to user.full_name, admin_user_path(user) %></td>
      <td><%= time_ago_in_words user.last_seen_at %></td>
      <td><%= link_to "Edit", edit_admin_user_path(user) %> &nbsp; <%= link_to "Delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure you want to delete #{user.full_name}?" %></td>
    </tr>
  <% end %>
</table>
